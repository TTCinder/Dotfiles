        "tooltip": false
    },
    "custom/menu": {
        "format": "‚ò∞",
        "on-click": "/home/joaquin/.config/rofi/powermenu.sh",
        "tooltip": false
    },
    "custom/search": {
        "format": "üîç",
        "on-click": "/home/joaquin/.config/rofi/powermenu.sh",
        "tooltip": false
    },
    "custom/notification": {
        "format": "üîî"
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 20,
        "icon-theme": "Flat-Remix-Violet-Dark",
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close"
    }
    
}
