{
    
    "position": "bottom",
    "layer": "bottom", // Waybar at top layer
    "height": 10, // Waybar height (to be removed for auto height)
    "spacing": 1, // Gaps between modules (4px)

    "modules-left":   [],
    "modules-center": ["custom/launcher","hyprland/workspaces" ],
    "modules-right":  ["tray", "pulseaudio","battery", "clock","custom/notification"],

    // Modules configuration
    "hyprland/workspaces": {
        "active-only": false,
        "format": "{icon}",
        "on-click": "activate",
        "format-icons": {
            "default": "‚óã",
            "active":"‚óè"
        },
        "persistent_workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": []
        }
      },

    "cpu": {
        "format": "Ôãõ",
        "tooltip": true,
        "tooltip-format": "{usage}% CPU"
    },
    "memory": {
        "format": "ÔÉâ",
        "tooltip": true,
        "tooltip-format": "{}% RAM used ({used}/{total} GB)"
    },
    "temperature": {
        "critical-threshold": 80,
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}",
        "tooltip-format":"El brillo esta al {percent}%",
        "format-icons": ["\u2600", "\u2600"]
    },

    "tray": { 
        "spacing": 10,
        "icon-size": 15
        
    },
    "clock": {
        "format": "{:%H:%M - %d %b }",
        "format-alt":"{:%H:%M }"
    },

    "battery": {
        "format": "<span font='Font Awesome 5 Free 11'>{icon}</span> {capacity}%",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
        "format-time": "{H}h{M}m",
        "format-charging": "<span font='Font Awesome 5 Free'>ÔÉß</span>  <span font='Font Awesome 5 Free 11'>{icon}</span>  {capacity}% - {time}",
        "format-full": "<span font='Font Awesome 5 Free'>ÔÉß</span>  <span font='Font Awesome 5 Free 11'>{icon}</span>  Charged", 
        "format-alt":"<span font='Font Awesome 5 Free 11'>{icon}</span> ",   
        "interval": 30,
        "states": {
            "warning": 25,
            "critical": 10
        }
    },

    "pulseaudio": {
        "scroll-step": 5, // %, can be a float
        "format": "{icon}",
        "icon-size": 10,
        "format-bluetooth": "{icon}Ôäî ",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî",
        "format-muted": "Ôö©",
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "tooltip": true,
        "tooltip-format": "{icon} {volume}% {format_source}"
    },
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/launcher": {
        "format": "‚üë",
        "on-click": "/home/joaquin/.config/rofi/menuLauncherEsquina.sh" 
    },
    "custom/powermenu": {
        "format": "ÔÄë ",
